<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>

<body>
  <div class="container-fluid main-cont">
    <%- include('./partials/nav.ejs') %>
    <h1 class="text-center mb-5 products-Head">PRODUCTS</h1>


    <div class="container text-center">
      <div class="row">
        <% products.forEach(el=>{ %>
        <div class="col-3 mb-3">

          <div class="card" >
            <a href="/products/<%= el._id %>" class="card-link"><img src=<%= el.images[0] %> class="card-img-top card-img" alt="..."></a>
            <div class="card-body">
              <h5 class="card-title"><%= el.title %> </h5>
              <p class="card-text"> <%= el.description %> </p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">Price : Rs.<%= el.price*70 %> </li>
              <li class="list-group-item">Rating : <%= el.rating %>/5</li>

            </ul>
            <div class="card-body">
              <a href="/products/<%= el._id %>" class="card-link">Buy Now</a>
              <a href="#" class="card-link">Add to Cart</a>
            </div>
          </div>

        </div>

        <% }) %>
      </div>
    </div>



    
  </div>
  <%- include('./partials/footer.ejs') %>
</body>

</html>