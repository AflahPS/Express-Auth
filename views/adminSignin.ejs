<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>

<body>

  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6 text-center mt-4">
        <% if (message === "Signed Out Successfully !!"){ %>
        <h2 class="message-h2"><%= message %> </h2>
        <% } %>
        <h2 class="heading-section">ADMIN LOG-IN</h2>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-5">
        <div class="login-wrap p-4 p-md-5">


          <form action="/admin/signin" method="post" class="login-form">

            <div class="form-group">
              <input type="email" class="form-control rounded-left mb-4" name="email" placeholder="Email" required>
            </div>

            <div class="form-group d-flex">
              <input type="password" class="form-control rounded-left mb-4" name="password" placeholder="Password" required>
            </div>

            <div class="form-group mb-2 text-center">
              <button type="submit" class="btn btn-outline-primary rounded submit px-4 p-2 mb-4">LOG IN</button>
            </div>

          </form>

          <% if (message === "Wrong Email/Password !"){ %>
          <p class="auth-text mb-2"><%= message %> </p>
          <% } %>

          <div class="text-center">
            <a href="/admin/register" class="btn btn-outline-danger rounded px-4 p-2 mb-4">New Admin ? Register Now</a>
          </div>

          <div class="text-center">
            <a href="/user/signin" class="btn btn-outline-danger rounded px-4 p-2 mb-4">User Sign-In</a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include('./partials/footer.ejs') %>
</body>

</html>