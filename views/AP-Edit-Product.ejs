<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>

<body>
  <%- include('./partials/admin-nav.ejs') %>
  <div class="container-fluid main-cont">




    <div class="row my-3">
      <form action="<%= product._id %> " method="post">
        <div class="col col-md-6 col-lg-10 m-auto text-secondary">
          <h2 class="text-center text-danger">EDIT PRODUCT</h2>
          <div class="mb-3">
            <label for="ID" class="form-label">ID :</label>
            <input class="form-control" type="text" name="ID" class="form-control" readonly value=<%= product._id %> />
          </div>
          <div class="mb-3">
            <label class="form-label" for="title">Title :</label>
            <input class="form-control" type="text" name="title" placeholder="Title" value=<%= product.title %> />
          </div>
          <div class="mb-3">
            <label class="form-label" for="brand">Brand :</label>
            <input class="form-control" type="text" name="brand" placeholder="Brand" value=<%= product.brand %> />
          </div>
          <div class="mb-3">
            <label class="form-label" for="description">Description :</label>
            <input class="form-control" type="text" name="description" placeholder="Description" value=<%= product.description %> />
          </div>
          <div class="mb-3">
            <label class="form-label" for="price">Price :</label>
            <input class="form-control" type="number" name="price" placeholder="Price" value=<%= product.price %> />
          </div>
          <div class="mb-3">
            <label class="form-label" for="discountPercentage">Discount Percentage :</label>
            <input class="form-control" type="number" name="discountPercentage" placeholder="discountPercentage" value=<%= product.discountPercentage %> />
          </div>
          <div class="mb-3">
            <label class="form-label" for="stock">Stock :</label>
            <input class="form-control" type="number" name="stock" placeholder="Stock" value=<%= product.stock %> />
          </div>
          <div class="mb-3">
            <label class="form-label" for="category">Category :</label>
            <input class="form-control" type="text" name="category" placeholder="Category" value=<%= product.category %> />
          </div>
          <div class="mb-3">
            <label class="form-label" for="thumbnail">Thumbnail :</label>
            <input class="form-control" type="text" name="thumbnail" placeholder="Thumbnail" value=<%= product.thumbnail %> />
          </div>

          <div class="mb-3 text-center">
            <input class="btn btn-outline-success btn-lg" type="submit" name="submit" value="Submit" />

            <% if (message === "Entered password is wrong !!" || "Email already used !!"){ %>
            <p class="auth-text"><%= message %> </p>
            <% } %>
          </div>


        </div>
      </form>

    </div>



  </div>
  <%- include('./partials/footer.ejs') %>
</body>

</html>