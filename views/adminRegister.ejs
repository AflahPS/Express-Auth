<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>

<body>


  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6 text-center mt-4">
        <h2 class="heading-section">Register Admin</h2>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-5">
        <div class="login-wrap p-4 p-md-5">

          <form action="/admin/register" method="post" class="login-form">

            <div class="form-group mb-4">
              <input type="text" class="form-control rounded-left" name="name" placeholder="Name" required>
            </div>

            <div class="form-group mb-4">
              <input type="text" class="form-control rounded-left" name="email" placeholder="Email" required>
            </div>

            <div class="form-group  mb-4">
              <input type="password" class="form-control rounded-left" name="password" placeholder="Password" required>
            </div>

            <div class="form-group  mb-4">
              <input type="password" class="form-control rounded-left" name="confirmPassword" placeholder="Confirm Password" required>
            </div>

            <div class="form-group mb-4">
              <input type="text" class="form-control rounded-left" name="post" placeholder="Post" required>
            </div>

            <div class="form-group mb-4">
              <input type="password" class="form-control rounded-left" name="specialKey" placeholder="Special Key" required>
            </div>


            <div class="form-group mb-2 text-center">
              <button type="submit" class="btn btn-outline-primary rounded submit px-4 p-2 mb-4">Register</button>
            </div>
          </form>

          <% if (message === "Email already used" || "Re-entered password is wrong OR special key mismatch !!" ){ %>
          <p class="auth-text"><%= message %> </p>
          <% } %>
          <div class="text-center">
            <a href="/admin/signin" class="btn btn-outline-danger rounded px-4 p-2 mb-4">Already Registered ? Sign-In Now</a>
          </div>

					<div class="text-center">
            <a href="/user/signin" class="btn btn-outline-danger rounded px-4 p-2 mb-4">User Sign-In</a>
          </div>

        </div>
      </div>
    </div>
  </div>

  <%- include('./partials/footer.ejs') %>
</body>

</html>